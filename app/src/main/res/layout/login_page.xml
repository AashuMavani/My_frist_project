<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grediant_layout"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Roostio"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="italic"></TextView>

    <EditText
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:hint="  Username"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"

        ></EditText>

    <EditText
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/baseline_password_24"
        android:hint="  password"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/baseline_panorama_wide_angle_24"
        android:text="Remember me"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/white"

        app:cardCornerRadius="80dp">

        <Button
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
           android:text="Log in"
            android:textColor="#DF1462"
            android:textStyle="bold"></Button>


    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button"
        android:text="sign up"
        app:backgroundTint="@null"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Your passwor"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="24dp">

        </TextView>
    </LinearLayout>

</LinearLayout>